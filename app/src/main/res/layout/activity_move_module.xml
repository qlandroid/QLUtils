<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_move_module"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ql.utils.qlutils.function.MoveModuleActivity">

    <com.ql.utils.qlutils.move.CanMoveSurfaceView
        android:id="@+id/can_move_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <HorizontalScrollView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:onClick="onCancelMoveModule"
                android:text="取消移动"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:onClick="onMoveModule"
                android:text="模块移动"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:onClick="onToZero"
                android:text="回到原点"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
