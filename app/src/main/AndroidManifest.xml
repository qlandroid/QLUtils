<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ql.utils.qlutils">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".function.SystemBarActivity" />
        <activity android:name=".function.NavActivity" />
        <activity android:name=".function.TagGroupLayoutActivity" />
        <activity android:name=".function.LabelTextViewActivity" />
        <activity android:name=".function.AutoTextActivity" />
        <activity android:name=".function.RecyclerViewActivity" />
        <activity android:name=".function.DataPickerActivity" />
        <activity android:name=".function.HartViewActivity" />
        <activity android:name=".function.HartSurfaceActivity" />
        <activity android:name=".function.VibrationActivity" />
        <activity android:name=".DecodeActivity" />
        <activity android:name=".function.HelloChartsActivity" />

        <receiver
            android:name=".NetWorkStateReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity android:name=".function.ExpandableTextViewActivity"></activity>
    </application>

</manifest>